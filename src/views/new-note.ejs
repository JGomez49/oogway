
<%- include ('partials/header.ejs') %>
<%- include ('partials/navigation.ejs') %>

<div class="col-md-4 mx-auto">

    <div class="card text-center my-4">

        <div class="card-header bg-info">
            <h3>New Note</h3>
        </div>

        <div class="card-body bg-secondary_">

            <form action="/notes/new-note" method="POST" enctype="multipart/form-data">

                <div class="form-group">

                    <input 
                        type="text" 
                        name="title"
                        class="form-control"
                        placeholder="Title"
                        autofocus
                    >
                    <br>

                    <textarea 
                        name="description" 
                        id="description" 
                        placeholder="Description"
                        class="form-control"
                    ></textarea>
                    <br>

                    <div class="card mb-3" style="background-color: #483D8B;">
                        <div class="card-body">
                          <p class="card-text">Upload a picture</p>
                            <div class="input-group mb-3">
                                <input
                                type="file"
                                name="image"
                                class="form-control"
                                id="inputGroupFile02"
                                />
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-block mb-2">
                        <button class="btn btn-primary" type="submit">Upload new note</button>
                        <a class="btn btn-info me-md-2" href="/notes">Cancel</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>